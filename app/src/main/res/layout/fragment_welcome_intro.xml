<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/lnCardWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/imWelcomeIcon"
            android:layout_width="79dp"
            android:layout_height="150dp"
            android:src="@drawable/icon_righthalf"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:id="@+id/lnWelcome"
            android:layout_toRightOf="@id/imWelcomeIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvWelcome"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:fontFamily="sans-serif-light"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textColor="@color/text_card"/>

            <TextView
                android:id="@+id/tvWelcomeReport"
                android:layout_below="@id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingRight="12dp"
                android:fontFamily="sans-serif-light"
                android:textSize="14sp"
                android:textColor="@color/text_card_light"
                android:text="@string/welcome_report_first_mood" />

            <TextView
                android:id="@+id/tvWelcomeExtra"
                android:layout_below="@id/tvWelcomeReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="12dp"
                android:paddingRight="12dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/mood_question"
                android:textSize="14sp"
                android:textColor="@color/text_card_light" />
        </RelativeLayout>

        <View
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/card_bottom" />
    </RelativeLayout>
</merge>