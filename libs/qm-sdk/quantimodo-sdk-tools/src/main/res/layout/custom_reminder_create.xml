<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_reminder_main_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:visibility="visible">
    <LinearLayout
        android:id="@+id/custom_reminder_container_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/card_middle">
        <Spinner
            android:id="@+id/spVariableCategory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#CCCCCC"
            android:inputType="none"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="-2dp"
        android:background="@drawable/shadow_horizontal">
        <EditText
            android:id="@+id/custom_reminder_variable_edit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minWidth="120dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:background="@drawable/card_complete"
            android:hint="@string/custom_reminders_variable_placeholder"/>
        <ProgressBar
            android:id="@+id/custom_reminder_progress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            style="?android:attr/progressBarStyleSmall"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:layout_alignEnd="@id/custom_reminder_variable_edit"
            android:layout_alignRight="@id/custom_reminder_variable_edit"
            android:layout_alignTop="@id/custom_reminder_variable_edit"
            android:layout_alignBottom="@id/custom_reminder_variable_edit"
            android:visibility="gone" />
    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ListView
        android:id="@+id/lvVariableSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_complete"
        android:scrollbarStyle="outsideOverlay"
        android:clipToPadding="false"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/custom_reminder_container_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/card_complete"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/reminders_create_value_text"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:textSize="15sp"
                android:hint="@string/custom_reminders_value"/>
            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/reminders_create_units_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:textSize="15sp"/>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="17sp"
            android:text="@string/custom_reminders_frequency"/>

        <Spinner
            android:id="@+id/reminders_create_freq_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/reminders_create_interval_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="8:00 AM"
                />
            <Button
                android:id="@+id/reminders_create_interval_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="4:00 PM"
                />
            <Button
                android:id="@+id/reminders_create_interval_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="12:00 AM"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/reminders_create_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/card_complete">
            <Button
                android:id="@+id/reminders_create_remove_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onRemove"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-light"
                android:textSize="17sp"
                android:text="@string/custom_reminders_cancel"/>
        </FrameLayout>
        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/card_complete">
            <Button
                android:id="@+id/reminders_create_save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onSave"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/selector"
                android:fontFamily="sans-serif-light"
                android:textSize="17sp"
                android:text="@string/custom_reminders_save"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>