<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome_fragment"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:background="#3467d6" >

    <FrameLayout
        android:id="@+id/images"
        android:layout_width="@dimen/welcome_images_size"
        android:layout_height="@dimen/welcome_images_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/welcome_images_margin_top"
        android:clipChildren="false">
        <ImageView
            android:id="@+id/img_1_0"
            android:layout_width="@dimen/fragment1_background_size"
            android:layout_height="@dimen/fragment1_background_size"
            android:scaleType="centerInside"
            android:src="@drawable/tour_image1_0"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img_1_1"
            android:layout_width="@dimen/fragment1_person"
            android:layout_height="@dimen/fragment1_person"
            android:scaleType="centerInside"
            android:src="@drawable/tour_image1_1"
            android:layout_marginTop="@dimen/fragment1_person_adjust"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/img_1_2"
            android:layout_width="@dimen/fragment1_paralax_image"
            android:layout_height="@dimen/fragment1_paralax_image"
            android:scaleType="centerInside"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="80dp"
            android:src="@drawable/tour_image1_2"
            android:layout_gravity="left|top"/>
        
        <ImageView 
            android:id="@+id/img_1_3"
            android:layout_width="@dimen/fragment1_paralax_image"
            android:layout_height="@dimen/fragment1_paralax_image"
            android:scaleType="centerInside"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/tour_image1_3"
            android:layout_gravity="left|top"/>
        <ImageView 
            android:id="@+id/img_1_4"
            android:layout_width="@dimen/fragment1_paralax_image"
            android:layout_height="@dimen/fragment1_paralax_image"
            android:scaleType="centerInside"
            android:layout_marginTop="112dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/tour_image1_4"
            android:layout_gravity="left|top"/>

        <ImageView
            android:id="@+id/img_1_5"
            android:layout_width="@dimen/fragment1_paralax_image"
            android:layout_height="@dimen/fragment1_paralax_image"
            android:scaleType="centerInside"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/tour_image1_5"
            android:layout_gravity="right|center_vertical"/>

        <ImageView
            android:id="@+id/img_1_6"
            android:layout_width="@dimen/fragment1_paralax_image"
            android:layout_height="@dimen/fragment1_paralax_image"
            android:scaleType="centerInside"
            android:layout_marginTop="75dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/tour_image1_6"
            android:layout_gravity="right|center_vertical" />

        <ImageView
            android:id="@+id/img_1_7"
            android:layout_width="@dimen/fragment1_paralax_image"
            android:layout_height="@dimen/fragment1_paralax_image"
            android:scaleType="centerInside"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="80dp"
            android:src="@drawable/tour_image1_7"
            android:layout_gravity="right|bottom" />
    </FrameLayout>

    <TextView
        android:id="@+id/heading"
        android:text="@string/tour_head_01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/images"
        android:layout_marginBottom="@dimen/fragment1_content_padding"
        android:layout_marginTop="@dimen/fragment1_heading_top"
        android:gravity="center"
        android:layout_marginLeft="@dimen/welcome_heading"
        android:layout_marginRight="@dimen/welcome_heading"
        android:textAppearance="@style/TourHeadingAppearance" />

    <TextView
        android:id="@+id/content"
        android:text="@string/tour_content_01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/welcome_content_min_height"
        android:layout_below="@+id/heading"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/fragment1_content_padding"
        android:gravity="center|top"
        android:textAppearance="@style/TourContentAppearance" />

</RelativeLayout>